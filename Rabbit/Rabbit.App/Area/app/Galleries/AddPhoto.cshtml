<!DOCTYPE html>
<html ng-app="myApp" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Rabbit</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body ng-controller="RabbitDataController">
    <div class="navbar navbar-fixed-top row  ">
        <div class="container">
            <button class="btn">WELCOME</button>
        </div>
    </div>
    <div class="col-lg-7 col-lg-offset-4">
        <br />
        <br />
        <row role="form" class="form-horizontal">
            <div class="form-group-">
                <label for="Name" class="col-sm-2 control-label">Gallery Name:</label>
                <div class="col-sm-10">
                    <input class="form-control" id="Name" type="text" placeholder="Podaj nazwę galerii." />
                </div>
            </div>
            <div class="form-group">
                <label for="Description" class="col-sm-2 control-label ">Description:</label>
                <div class="col-sm-10 ">
                    <textarea class="form-control " id="Description" placeholder="Wpisz opis tej galeri." style="height: 150px;"></textarea>
                </div>
            </div>
            <div class="form-group">

            </div>
            <div class="row">

            </div>
        </row>
    </div>
    <script src="https://code.jquery.com/jquery-3.0.0.min.js"></script>
    <script src="~/scripts/angular.js"></script>
    <script src="~/scripts/Rabbit/GalleryController.js"></script>
    <script>
       
        app.controller('RabbitDataController', function ($scope, RabbitSe) {

            loadData();

            function loadData() {
                //The controller call the function from the service
                var promiseGetData = RabbitSe.GetAllRabit();
                //Callback with success and failure
                promiseGetData.then(function (res) {
                    $scope.data = res.data;
                });
            }
        });
    </script>
</body>
</html>